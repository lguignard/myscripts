MAILBOX_DIR="$1"
DIR="$HOME/$MAILBOX_DIR"

if test -d "$DIR"; then
	for elem in `find "$DIR" -type d -not -path "*/cur*" -not -path "*/tmp*" -not -path "*/new*" -print`;
		do
			if test -d $elem; then
				echo "mailboxes $elem"
			fi
		done
		exit 0
else
	echo "Directory $MAILBOX_DIR doesn't exist !"
	exit -1
fi
