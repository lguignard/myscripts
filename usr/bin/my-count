SOURCE_BASE='/home/metro-gi/temp/sicontact_sf'
SOURCE_DIR="$SOURCE_BASE/sicontact"
TRUNK_DIR="$SOURCE_DIR/trunk"
SF_SHELL_DIR="$SOURCE_DIR/ shell.sourceforge.net"
SOURCE_WEB="$TRUNK_DIR/web"
SOURCE_DAEMON="$TRUNK_DIR/daemon"
SOURCE_ADMIN="$SF_SHELL_DIR/doc/pub/BDD"
SOURCE_SCRIPTS="$SF_SHELL_DIR/scripts"
HEURE=`date --date 'now' +%d-%m-%Y-%H-%M`
if [ -f /home/metro-gi/temp/sicontact_count/$HEURE* ]; then
	find /home/metro-gi/temp/sicontact_count/$HEURE* -type f -exec rm -f {} \;
fi

/usr/bin/sloccount --addlangall "$SOURCE_WEB" "$SOURCE_DAEMON" "$SOURCE_ADMIN" "$SOURCE_SCRIPTS" > /home/metro-gi/temp/sicontact_count/$HEURE.txt

less /home/metro-gi/temp/sicontact_count/$HEURE.txt
