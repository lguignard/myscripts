FFMPEG=`which ffmpeg`
FILE="$3"
START="$1"
END="$2"

STARTSTR=`echo $START | tr : -`
ENDSTR=`echo $END | tr : -`



Usage() {
	echo "Usage of $0"
	echo ""
	echo "Synopsis : "
	echo -e "\t$0 start_position end_position source_file"
	echo
	echo -e "\t"
}



#
# Check dependences
CheckDependences() {

	if [ ! -f $FFMPEG ]; then
		echo "ffmpeg not installed !"
		exit 1
	fi
}


#
# Main
	if [ -f "$FILE" ] || [ ! -z "$START" ] || [ ! -z "$END" ]; then
		echo "Cutting $FILE..."
		EXTENSION="${FILE##*.}"
		NEWFILE="$FILE"_"$STARTSTR"_"$ENDSTR"."$EXTENSION"
		echo "$FILE is cut in $NEWFILE."

		$FFMPEG -ss "$START" -i "$FILE" -to "$END" -acodec copy -vcodec copy "$NEWFILE"
	else
		echo "Bad parameters !"
		exit 2
	fi

