#    Foundation, Inc., 59 Temple Place, Suite 330, Boston, MA  02111-1307  USA
#

FFMPEG=`which ffmpeg`
FILE="$3"
START="$1"
END="$2"

STARTSTR=`echo $START | tr : -`
ENDSTR=`echo $END | tr : -`


if [ ! -f $FFMPEG ]; then
	echo "ffmpeg not installed !"
	exit 1
else
	echo "ffmpeg installed."

	if [ -f "$FILE" ] || [ ! -z "$START" ] || [ ! -z "$END" ]; then
		echo "Cutting $FILE..."
		EXTENSION="${FILE##*.}"
		NEWFILE="$FILE"_"$STARTSTR"_"$ENDSTR"."$EXTENSION"
		echo "$FILE is cut in $NEWFILE."

		$FFMPEG -ss "$START" -t "$END" -i "$FILE" "$NEWFILE"
	else
		echo "Bad parameters !"
		exit 2
	fi
fi

