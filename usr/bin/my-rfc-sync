#       politic about shell change to Dash



LOCAL_RFC_REPOSITORY=$HOME/doc/rfcs
FTP_HOST="ftp.rfc-editor.org"
MY_DESTINATION="my-rfc-mirror"

cd $LOCAL_RFC_REPOSITORY
rsync -avz $FTP_HOST::rfcs-text-only "$MY_DESTINATION"

