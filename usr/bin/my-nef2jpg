#
# \fn usage()
# \brief Show a summary of command usage
Usage () {
	echo "$0 usage :"
	echo "\t$0 source"
  echo 
	echo "\tsource : "
  echo
  echo "\tDescription :"
  echo "\tThis tools will convert all NEF files given as argument to JPEG files."
  echo "\tAll JPEG files will be stored in ./jpeg directory."
}


#
# \brief Needed tools are installed or not
areToolsHere() {
	if test ! -x /usr/bin/ufraw-batch; then
		echo -n "/usr/bin/ufraw-batch is needed. Under Debian this software is provided"
		echo " by 'ufraw-batch' package."
		exit 1
	fi
}




#
# Main
if [ "$#" -ne "1" ]; then
	Usage
	exit 1
fi

#areToolsHere

if [ ! -d ./jpeg ]; then
  mkdir ./jpeg
fi

ufraw-batch --out-type=jpeg --out-path=./jpeg "$1"

exit 0
