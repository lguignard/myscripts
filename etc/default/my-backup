#DEBUG value : true|false
DEBUG=true


# Common medium size
DVD_SIZE="4.2G"
CD_SIZE="700M"


# Backup targets
USB_PATH="/media/usb"
REGEX_USB_PATH="\/media\/usb"
DVD_DEV="/dev/dvdrw"

# Variables particuli√®res
DEST_BACKUP="f"

# Remote host name where backup will be stored
DEST_HOST="fixe"

# Remote login
DEST_NAME=`whoami`

# Remote path to store the backup
DEST_PATH="$HOME/sauve"

# File where to set all directories to backup
DATA_LOCATION_FILE="/etc/default/data_loc"


DEST_LOC="/tmp"
TMP_IMAGE="$DEST_LOC/my_image"

